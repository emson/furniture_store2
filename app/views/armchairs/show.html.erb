    <div class='clip'><%= image_tag(@armchair.image_main, { id:'catimg', alt:'' }) %></div>
    <h2><%= @armchair.name %></h2>
  	<p><%= @armchair.description %></p>
  	<dl>
  		<dt>Seats</dt>
  		<dd><%= @armchair.seats %></dd>
  		<dt>Shape</dt>
  		<dd><%= @armchair.shape %></dd>
  		<dt>Back</dt>
  		<dd><%= @armchair.back %></dd>
